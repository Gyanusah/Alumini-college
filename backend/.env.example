# Database
MONGO_URI=mongodb://localhost:27017/alumni-network

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Server
PORT=5000
NODE_ENV=development

# Admin Credentials (Optional - for initial setup)
# If not set, defaults will be used: admin@alumni.com / admin123
ADMIN_EMAIL=admin@alumni.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User

# Email Configuration (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@alumni.com
FROM_NAME=Alumni Network

# Frontend URL
FRONTEND_URL=http://localhost:5173
